# MySQLサーバーへの設定
[mysqld]
# 文字コード/照合順序の設定
character-set-server = utf8mb4
collation-server = utf8mb4_bin

# 一般ログの設定
general_log = 1
log_output = FILE
general_log_file = /var/log/mysql/general.log

# タイムゾーンの設定
default-time-zone = Asia/Tokyo

# mysqlオプションの設定
[mysql]
# 文字コードの設定
default-character-set = utf8mb4

# mysqlクライアントツールの設定
[client]
# 文字コードの設定
default-character-set = utf8mb4
